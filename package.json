{
  "name": "youtube-production-assistant-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "workers/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "dev:worker": "npm run dev --workspace=workers/search-processor",
    "build": "npm run build --workspace=apps/web",
    "start": "npm run start --workspace=apps/web",
    "lint": "npm run lint --workspace=apps/web",
    "db:migrate": "npm run db:migrate --workspace=apps/web",
    "security:check": "node scripts/security/check-guards.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "dotenv": "^17.2.3"
  }
}
