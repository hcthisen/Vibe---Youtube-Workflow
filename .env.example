# YouTube Production Assistant - Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# SUPABASE
# =============================================================================
# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous key (safe for client-side)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase service role key (server-side only, never expose to client)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Direct PostgreSQL connection for migrations
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@your-host:5432/postgres

# =============================================================================
# DATAFORSEO
# =============================================================================
# DataForSEO credentials for YouTube research
DATAFORSEO_LOGIN=your-login
DATAFORSEO_PASSWORD=your-password

# =============================================================================
# OPENAI
# =============================================================================
# OpenAI API key
OPENAI_API_KEY=sk-...

# Default model for complex tasks (outlines, research)
OPENAI_MODEL_DEFAULT=gpt-5.2

# Fast model for simpler tasks (titles, summaries)
OPENAI_MODEL_FAST=gpt-5-mini

# =============================================================================
# GOOGLE AI STUDIO (Nano Banana Pro)
# =============================================================================
# Google AI Studio API key for thumbnail generation
GOOGLE_AI_STUDIO_API_KEY=your-google-ai-key

# Imagen model for thumbnail generation
NANO_BANANA_MODEL=gemini-3-pro-image-preview

# API endpoint
NANO_BANANA_ENDPOINT=https://generativelanguage.googleapis.com/v1beta

# =============================================================================
# WORKER
# =============================================================================
# Shared secret for worker authentication
WORKER_SHARED_SECRET=generate-a-secure-random-string

# Optional: Worker configuration
# WORKER_POLL_INTERVAL=5
# WORKER_TEMP_DIR=/tmp/yt-worker
# WHISPER_MODEL=base
